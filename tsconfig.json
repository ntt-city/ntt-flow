{
    "compilerOptions": {
        "target": "ES2015",
        "module": "amd",
        "declaration": true,
        "outDir": "lib/index.js",
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "../../built/local/tsc.js",
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "typings/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "typeRoots" : ["./typings", "./node_modules/@types/", "../node_modules/@types/"]
}